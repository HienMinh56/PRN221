@page
@model BabyStore.Pages.UserMenu.CartModel

@{
    ViewData["Title"] = "Cart";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Cart</h1>

<link rel="stylesheet" href="~/css/cart.css" />

<div class="cart">
    @if (Model.CartItems.Count == 0)
    {
        <p>Your cart is empty.</p>
    }
    else
    {
        <table class="cart-table">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CartItems)
                {
                    <tr>
                        <td><img src="@item.ProductImage" alt="@item.ProductName" class="cart-image" /></td>
                        <td>@item.ProductName</td>
                        <td>@string.Format("{0:n0} VNĐ", item.Price)</td>
                        <td>@item.Quantity</td>
                        <td>@string.Format("{0:n0} VNĐ", item.Price * item.Quantity)</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>