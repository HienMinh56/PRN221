<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BL3w_GroupProject.styles.css" asp-append-version="true" />

    <style>
        nav {
            background-color: #ff469e;
        }

        div dropdown-menu a {
            text-decoration: none;
        }

        a.navbar-brand {
            white-space: normal;
            text-align: center;
            word-break: break-all;
        }

        a.nav-link {
            font-weight: 600;
        }

            a.nav-link:hover {
                background-color: deepskyblue;
                border-radius: 4px;
            }

        button#lotDropdown.btn.nav-link.dropdown-toggle.text-decoration-none.text-white:hover {
            background-color: deepskyblue;
            border-radius: 4px;
        }

        .btn-primary {
            color: #fff;
            background-color: deepskyblue;
            border-color: #1861ac;
        }

        .nav-pills .nav-link.active, .nav-pills .show > .nav-link {
            color: #fff;
            background-color: deepskyblue;
            border-color: #1861ac;
        }

        .border-top {
            border-top: 1px solid #e5e5e5;
        }

        .border-bottom {
            border-bottom: 1px solid #e5e5e5;
        }

        .box-shadow {
            box-shadow: 0 .25rem .75rem rgba(0, 0, 0, .05);
        }

        button.accept-policy {
            font-size: 1rem;
            line-height: inherit;
        }

        .footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            white-space: nowrap;
            line-height: 60px;
        }
    </style>
</head>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand text-white" asp-area="" asp-page="/Admin/Dashboard" style="font-size: 30px; font-weight:1000">Baby Store</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Admin/Dashboard">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Admin/UserManagement/User">Accounts</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-white" asp-area="" asp-page="/Admin/ProductManagement/Index">Products</a>
                        </li>
                        <li class="nav-item dropdown">                            
                            <a class="nav-link text-white" asp-area="" asp-page="/Admin/TransactionManagement/Transaction">Transactions</a>                                
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Admin/OrderManagement/Order">Orders</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-white" asp-area="" asp-page="/Admin/ManageStockOut/ListStockOut">Stock Out</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-white" id="logoutButton" href="#"><i class="fa-solid fa-right-from-bracket"></i></a>
                        </li>
                    </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Baby Store - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<script>
    $(document).ready(function () {
        $('#logoutButton').on('click', function () {
            var confirmLogout = confirm("Are you sure you want to logout?");

            if (confirmLogout) {
                window.location.href = '/Logout';
            }
        });
    });
</script>