@{
    var httpContext = ViewContext.HttpContext;
}

<!DOCTYPE html>
<html lang="vn">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BabyStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/product.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BabyStore.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-k6RqeWeci5ZR/Lv4MR0sA0FfDOMjO9wi8PIQv6MO/sX3BnI6pYZZ2yb8z7gXw6vH" crossorigin="anonymous">
    @RenderSection("Styles", required: false)
    <style>
        .cart-icon {
            width: 24px; /* Adjust the size as needed */
            height: auto;
        }

        .navbar {
            padding: 0.5rem 1rem; /* Adjust the padding to make the header smaller */
        }

        .notification {
            position: fixed;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            background-color: #28a745;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            display: none;
            z-index: 1050; /* Ensure it's above other elements */
        }

            .notification.show {
                display: block;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container navbar-container">
                <a href="/UserMenu/ProductsMenu" class="navbar-brand">BabyStore</a>
                <form method="get" action="/UserMenu/ProductsMenu" class="form-inline search-form">
                    <div class="input-group search-bar-container">
                        <input class="form-control search-bar" type="search" name="SearchQuery" placeholder="Search..." aria-label="Search" />
                        
                    </div>
                </form>
                <a href="/UserMenu/Cart" class="nav-link cart-link">
                    <img src="~/images/cart-icon.png" alt="Cart" class="cart-icon" />
                </a>

                @if (!string.IsNullOrEmpty(httpContext.Session.GetString("username")))
                {
                    <div class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" onclick="toggleDropdown()" aria-haspopup="true" aria-expanded="false">
                            @httpContext.Session.GetString("username")
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="/UserMenu/UserProfileMenu?id=@httpContext.Session.GetString("id")">Profile</a>
                            <a class="dropdown-item" href="/UserMenu/MyOrder">MyOrders</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="/Logout">Logout</a>
                        </div>

                        <script>
                            function toggleDropdown() {
                                var dropdownMenu = document.querySelector('.dropdown-menu');
                                dropdownMenu.classList.toggle('show');
                            }

                            document.addEventListener('DOMContentLoaded', function () {
                                // Any additional JavaScript for the layout can go here
                            });
                        </script>
                    </div>
                }
                else
                {
                    <a href="/Login" class="nav-link">Login</a>
                }
            </div>
        </nav>
    </header>






    <main role="main" class="container-fluid" style="margin-top: 60px;">
        @RenderBody()
    </main>

    <footer class="footer mt-4" style="margin-top: 100px">
        <div class="container">
            <p>&copy; 2024 - BabyStore</p>
        </div>
    </footer>

    <div id="notification" class="notification"></div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
    <script>
        function showNotification(message) {
            const notification = document.getElementById('notification');
            notification.textContent = message;
            notification.classList.add('show');
            setTimeout(() => {
                notification.classList.remove('show');
            }, 3000);
        }
    </script>
</body>
</html>
