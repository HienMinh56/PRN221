<script>
    $(document).ready(function () {
        $('#logoutButton').on('click', function () {
            var confirmLogout = confirm("Are you sure you want to logout?");

            if (confirmLogout) {
                window.location.href = '/Logout';
            }
        });
    });
</script>

@* <input type="button" value="Print Form" onclick="window.print()" /> *@

<script>
    const ctx = document.getElementById('chart1');

    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['StockOut', 'Lot'],
            datasets: [{
                label: 'Compare StockOut & Lot',
                data: [@Model.TransactionCount, @Model.OrderCountSucess],
                backgroundColor: [
                    '#ff469e'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>


<script>
    const ctx1 = document.getElementById('chart2');

    new Chart(ctx1, {
        type: 'pie',
        data: {
            labels: ['Active', 'In Active'],
            datasets: [{
                label: 'Account active & inactive',
                data: [@Model.Account1, @Model.Account0],
                backgroundColor: [
                    '#ff469e',
                    'deepskyblue'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
    </script>
}
