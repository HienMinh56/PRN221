@page
@model BabyStore.Pages.Admin.UserManagement.IndexModel

@{
    Layout = "/Pages/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "User | Baby Store";

    int x = 0;
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>

<style>
    .horizontal-pagination {
        display: flex;
        justify-content: center;
    }
    .horizontal-pagination ul {
        list-style: none;
        display: flex;
        padding: 0;
        margin: 0;
    }
    .horizontal-pagination li {
        margin-right: 5px;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="row justify-content-lg-start">
                <div class="col-2">
                    <h3>Accounts list</h3>
                </div>
                <div class="col-4">
                    <form class="d-md-inline-flex" role="search" method="post">
                        <div class="form-group col-3">
                            <select name="SearchBy" class="form-control">
                                <option value="UserId">UserId</option>
                                <option value="Email">Email</option>
                            </select>
                        </div>
                        <input style="margin-left: 6px" class="form-control me-2" type="search" placeholder="Search" aria-label="Search" asp-for="Keyword">
                        <button class="btn btn-primary" style="color: #fff" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                    </form>
                </div>
                <div class="col-2">
                    <p>
                        <a asp-page="./Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i></a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<br />

<table class="table table-hover">
    <thead style="background-color: black; text-align: center" class="text-white">
        <tr>
            <th>No.</th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Role)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.User[0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.User) {
        <tr>
            <td class="text-center">@(++x)</td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            
            <td class="text-center">
                @if (item.Status == 1)
                {
                    <span class="text-success">Active</span>
                }
                else if (item.Status == 0)
                {
                    <span class="text-danger">Banned</span>
                }
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.UserId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.UserId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.UserId">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>

<div class="horizontal-pagination">
    <ul class="pagination">
        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                <a asp-page="./User" asp-route-pageIndex="@i" class="page-link">@i</a>
            </li>
        }
    </ul>
</div>