        <div class="container-fluid py-1 px-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
                    <li class="breadcrumb-item text-sm"><a class="opacity-5 text-white" href="javascript:;">Pages</a></li>
                    <li class="breadcrumb-item text-sm text-white active" aria-current="page">User</li>
                </ol>
                <h6 class="font-weight-bolder text-white mb-0">Dashboard</h6>
            </nav>
            <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4" id="navbar">
                <div class="ms-md-auto pe-md-3 d-flex align-items-center">
                    <!-- <div class="input-group">
                      <span class="input-group-text text-body"><i class="fas fa-search" aria-hidden="true"></i></span>
                      <input type="text" class="form-control" placeholder="What are you looking for ?">
                    </div> -->
                </div>
                <ul class="navbar-nav  justify-content-end">
                    <li class="nav-item d-flex align-items-center">
                        <a href="javascript:;" class="nav-link text-white font-weight-bold px-0">
                            <i class="fa fa-user me-sm-1"></i>
                            @if (!string.IsNullOrEmpty(httpContext.Session.GetString("username")))
                            {
                                <span class="d-sm-inline d-none">Welcome back, @httpContext.Session.GetString("username") !!</span>
                            }
                        </a>
                    </li>
                    <li class="nav-item d-xl-none ps-3 d-flex align-items-center">
                        <a href="javascript:;" class="nav-link text-white p-0" id="iconNavbarSidenav">
                            <div class="sidenav-toggler-inner">
                                <i class="sidenav-toggler-line bg-white"></i>
                                <i class="sidenav-toggler-line bg-white"></i>
                                <i class="sidenav-toggler-line bg-white"></i>
                            </div>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid py-4">

        <div class="row">
            <div class="col-12">
                <div class="card mb-4">
                    <div class="card-header pb-0 d-flex justify-content-between align-items-center">
                        <h6>Users's table</h6>
                        <a class="btn btn-primary" asp-page="./Create">
                            Create <i class="ni ni-fat-add fs-7"></i>
                        </a>
                    </div>
                    <div class="card-body px-0 pt-0 pb-2">
                        <div class="table-responsive p-0">
                            <table class="table align-items-center mb-0">
                                <div class="row ps-4 align-items-center w-100">
                                    <form method="post">
                                        <div class="col-2">
                                            <label asp-for="UserId" class="form-label">UserId</label>
                                            <input type="search" id="userIdInputAdmin" class="form-control" placeholder="Enter userId" asp-for="UserId" />
                                        </div>
                                        <div class="col-2">
                                            <label asp-for="UserName" class="form-label">Name</label>
                                            <input type="text" id="nameInputAdmin" class="form-control" placeholder="Enter name" asp-for="UserName">
                                        </div>
                                        <div class="col-2">
                                            <label asp-for="Status" class="form-label">Status</label>
                                            <select class="form-select" asp-for="Status">
                                                <option value="">All</option>
                                                <option value="1">Active</option>
                                                <option value="0">Banned</option>
                                            </select>
                                        </div>
                                        <div class="col-2">
                                            <label asp-for="Role" class="form-label">Role</label>
                                            <select class="form-select" asp-for="Role">
                                                <option value="">All</option>
                                                <option value="1">Admin</option>
                                                <option value="2">Customer</option>
                                            </select>
                                        </div>
                                        <div class="col-2" style="margin: 45px 0 0 0 ; padding: 0;">
                                            <button type="submit" class="btn btn-primary w-100" style="height: 40px;">Search</button>
                                        </div>
                                    </form>
                                </div>
                                <thead>
                                    <tr>
                                        <th class="col-3 text-uppercase text-secondary text-xxs font-weight-bolder opacity-10 ps-7">User</th>
                                        <th class="col-1 text-uppercase text-secondary text-xxs font-weight-bolder opacity-10 ps-2">Password</th>
                                        <th class="col-2 text-uppercase text-secondary text-xxs font-weight-bolder opacity-10 ps-2">Address</th>
                                        <th class="col-2 text-uppercase text-secondary text-xxs font-weight-bolder opacity-10 ps-2">Phone</th>
                                        <th class="col-1 text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-10">Role</th>
                                        <th class="col-1 text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-10" style="margin-left: 30px">Status</th>
                                        <th class="col-1 text-secondary opacity-7"></th>
                                    </tr>
                                </thead>
                                @foreach (var item in Model.User)
                                {
                                    <tbody id="userTableBody">
                                        <tr>
                                            <td>
                                                <div class="d-flex px-2 py-1">
                                                    <div>
                                                        <img src="@(item.Role == 1 ? Url.Content("~/images/admin.png") : Url.Content("~/images/user.png"))" class="avatar me-3" alt="Users">
                                                    </div>
                                                    <div class="d-flex flex-column justify-content-center">
                                                        <h6 class="mb-0 text-sm">@Html.DisplayFor(modelItem => item.UserId)</h6>
                                                        <p class="text-xs text-secondary mb-0">@Html.DisplayFor(modelItem => item.UserName) - @Html.DisplayFor(modelItem => item.Email)</p>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <p class="text-xs font-weight-bold mb-0">***</p>
                                            </td>
                                            <td>
                                                <p class="text-xs font-weight-bold mb-0">@Html.DisplayFor(modelItem => item.Address)</p>
                                            </td>
                                            <td>
                                                <p class="text-sm font-weight-bold mb-0">@Html.DisplayFor(modelItem => item.Phone)</p>
                                            </td>
                                            <td class="align-middle text-center text-sm">
                                                <span class="badge badge-sm @(item.Role == 1 ? "bg-gradient-success" : "bg-gradient-info")">
                                                    @if (item.Role == 1)
                                                    {
                                                        <span>Admin</span>
                                                    }
                                                    else if (item.Role == 2)
                                                    {
                                                        <span>Customer</span>
                                                    }
                                                </span>
                                            </td>
                                            <td class="align-middle text-center">
                                                <span class="text-secondary text-xs font-weight-bold">
                                                    @if (item.Status == 1)
                                                    {
                                                        <span class="text-success">Active</span>
                                                    }
                                                    else if (item.Status == 0)
                                                    {
                                                        <span class="text-danger">Banned</span>
                                                    }
                                                </span>
                                            </td>
                                            <td class="align-middle justify-content-center">
                                                <a asp-page="./Edit" asp-route-id="@item.UserId"><i class="ni ni-settings-gear-65" style="color: aqua"></i></a> |
                                                <a asp-page="./Delete" asp-route-id="@item.UserId"><i class="ni ni-fat-remove text-danger"></i></a>
                                            </td>
                                        </tr>
                                    </tbody>
                                }
                            </table>

                            <br />

                            <div class="d-flex justify-content-center">
                                <ul class="pagination" style="list-style: none; display: flex; padding: 0; margin: 0;">
                                    @for (var i = 1; i <= Model.TotalPages; i++)
                                    {
                                        <li class="page-item @(i == Model.PageIndex ? "active" : "")" style="margin-right: 5px;">
                                            <a asp-page="./User" asp-route-pageIndex="@i" class="page-link" style="color: white;">@i</a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <footer class="footer pt-3  ">
            <div class="container-fluid">
                <div class="row align-items-center justify-content-lg-between">
                    <div class="col-lg-6 mb-lg-0 mb-4">
                        <div class="copyright text-center text-sm text-muted text-lg-start">
                            © <script>
                                  document.write(new Date().getFullYear())
                            </script>,
                            -
                            <a href="#" class="font-weight-bold" target="_blank">Baby Store</a>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <ul class="nav nav-footer justify-content-center justify-content-lg-end">
                            <li class="nav-item">
                                <a href="https://github.com/HienMinh56" class="nav-link text-muted" target="_blank">Github</a>
                            </li>
                            <li class="nav-item">
                                <a href="https://www.youtube.com/watch?v=xvFZjo5PgG0" class="nav-link text-muted" target="_blank">About Us</a>
                            </li>
                            <li class="nav-item">
                                <a href="https://www.apache.org/licenses/" class="nav-link text-muted" target="_blank">Licenses</a>
                            </li>
                            <li class="nav-item">
                                <a href="https://hienminh56-contact.netlify.app/" class="nav-link pe-0 text-muted" target="_blank">Contact</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </footer>

    </div>
</main>