    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-md-8">
                <form method="post">
                    <div class="card">
                        <div class="card-header pb-0">
                            <div class="d-flex align-items-center">
                                <p class="mb-0">Add Product information:</p>
                                <input type="submit" class="btn btn-primary btn-sm ms-auto" value="Create" />
                            </div>
                        </div>
                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <p class="text-uppercase text-sm"></p>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Product.Name" class="form-control-label">ProductName</label>
                                        <input class="form-control" asp-for="Product.Name" />
                                        <span asp-validation-for="Product.Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Product.Title" class="form-control-label">ProductTitle</label>
                                        <input class="form-control" asp-for="Product.Title" />
                                        <span asp-validation-for="Product.Title" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Product.Price" class="form-control-label">Price</label>
                                        <input class="form-control" asp-for="Product.Price" />
                                        <span asp-validation-for="Product.Price" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Product.Quantity" class="form-control-label">Quantity</label>
                                        <input class="form-control" asp-for="Product.Quantity" />
                                        <span asp-validation-for="Product.Quantity" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Product.Description" class="form-control-label">Description</label>
                                        <textarea class="form-control" asp-for="Product.Description"></textarea>
                                        <span asp-validation-for="Product.Description" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Product.CateId" class="form-control-label">Category</label>
                                        <select asp-for="Product.CateId" class="form-control" asp-items="ViewBag.CateId"></select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="@Model.Image" class="form-control-label">Images</label>
                                        <input class="form-control" asp-for="@Model.Image" type="file" onchange="previewImage(event, 'imagePreview')" />
                                        <span asp-validation-for="@Model.Image" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <img id="imagePreview" src="" alt="Product Image" style="display:none; max-width: 100%; height: 80%; padding-top: 10px;">
                                    </div>
                                </div>
                            </div>
                            <hr class="horizontal dark">
                            <p class="text-uppercase text-sm">Important Settings</p>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="Product.Status" class="form-control-label">Status</label>
                                        <select class="form-control" asp-for="Product.Status">
                                            <option value="1">Active</option>
                                            <option value="0">Inactive</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <hr class="horizontal dark">
                        </div>
                    </div>
                </form>
            </div>
