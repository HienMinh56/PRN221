@page
@model BabyStore.Pages.IndexModel
@{
    ViewData["Title"] = "Login Page";
    Layout = "~/Pages/Shared/_Layout_Login.cshtml"; // Đảm bảo bạn đã có file Layout để sử dụng
}

<!DOCTYPE html>
<html>
<head>
    <title>Login Page</title>
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@500&display=swap" rel="stylesheet">
    <style>
        /* Thêm CSS cho field-wrapper và các phần tử khác nếu cần */
        .field-wrapper {
            margin-bottom: 20px;
        }

        input[type="text"], input[type="password"] {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        input[type="submit"] {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            input[type="submit"]:hover {
                background-color: #0056b3;
            }

        .field-wrapper label {
            position: absolute;
            top: 14px;
            left: 10px;
            color: #888;
            pointer-events: none;
            transition: 0.25s;
        }

        .field-wrapper input:focus ~ label,
        .field-wrapper input:not(:placeholder-shown) ~ label {
            top: 2px;
            font-size: 12px;
            color: #007bff;
        }
    </style>
</head>
<body>
    <h2>Sign in</h2>
    <form method="post" asp-page-handler="Login">
        <div class="field-wrapper">
            <input type="text" asp-for="Username" placeholder=" ">
            <label asp-for="Username">Username</label>
        </div>
        <div class="field-wrapper">
            <input type="password" asp-for="Password" placeholder=" " autocomplete="new-password">
            <label asp-for="Password">Password</label>
        </div>
        <div class="field-wrapper">
            <input type="submit" value="Sign in">
        </div>
        <div>
            <a asp-page="SignUp">Already have not an account? Register</a>
        </div>

    </form>
</body>
</html>
